/* 分享 */

.juzhong {
  display: flex;
  justify-content: center;
}

.fenxiang {
  position: fixed;
  width: 300rpx;
  height: 80rpx;
  bottom: 40rpx;
  background-color: #2c2c2c;
  /* background-color: black;  */
  color: #fff;
  border-radius: 20rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  /* box-shadow: 0 4rpx 4rpx #2c2c2c; */
}

/* 分享的蒙层 */

.mask {
  position: fixed;
  top: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.4);
}

.mask-1 {
  height: auto;
  width: 100%;
  position: fixed;
  bottom: 0;
  /* z-index: 11; */
  background-color: #fff;
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.mask-2 {
  width: 100%;
  display: flex;
  justify-content: space-around;
  padding: 40rpx 0;
  font-size: 28rpx;
}

/* 画布覆盖 */

.canvas {
  margin-top: 200rpx;
}

.cover {
  height: 100%;
  width: 100%;
  background-color: #fff;
}

/* 情况button样式 */

.mybutton {
  /* color: red; *//* opacity: 1; *//* display: inline-block; */
  width: auto;
  height: auto;
  background-color: transparent;
  margin: 0 0;
  padding: 0 0;
  line-height: normal;
  font-size: 28rpx;
}

button::after {
  display: none;
}
