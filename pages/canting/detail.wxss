}

.base4-2 {
  /* border-bottom: 1rpx solid #e5e5e5; */
}

.base4-2-1 {
  display: flex;
  padding: 20rpx;
}

.base4-2-1-1 {
  height: 60rpx;
  width: 60rpx;
  margin-right: 20rpx;
}

.base4-2-1-2 {
  font-size: 24rpx;
  color: #8a8a8a;
}

.base4-2-2 {
  margin-left: 100rpx;
