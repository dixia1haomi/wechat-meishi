.createLiuyan {
  position: relative;
  left: 300rpx;
  display: inline-block;
  font-size: 28rpx;
  background-color: #efefef;
  padding: 20rpx 20rpx 20rpx 0;
  color: steelblue;
}

.noLiuyan {
  background-color: #efefef;
  padding: 40rpx 0 160rpx 0;
  font-size: 28rpx;
  color: #8a8a8a;
  text-align: center;
}

.weixuanzhong {
  color: #8a8a8a;
  font-size: 42rpx;
}

.xuanzhong {
  color: #f2cd20;
  font-size: 42rpx;
}

/* 回主页按钮 */

.goindex {
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  bottom: 40rpx;
  right: 20px;
  background-color: #2c2c2c;
  color: #fff;
  border-radius: 50%;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
