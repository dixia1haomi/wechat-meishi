  display: flex;
  margin-top: 20rpx;
}

.base3-tar-item {
  flex: 1;
  text-align: center;
  background-color: #fff;
  padding: 20rpx 0;
  font-size: 32rpx;
  border-bottom: 4rpx solid #1296db;
