.base {
  background-color: #fff;
}

/* ----base1---- */

.base1 {
  max-height: 421.875rpx;
  overflow-y: hidden;
}

.base1-img {
  width: 750rpx;
  height: 421.875rpx;
}

/* ----base2---- */

.base2 {
  font-size: 32rpx;
  background-color: #fff;
}

.base2-text {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  /* 加载时固定高度 */
  height: 312rpx;
}

.base2-gaode {
  text-align: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
  border-top: 1rpx solid #e5e5e5;
}

.gaodemap {
  height: 320rpx;
  /* width: 640rpx; */
  width: 100%;
}

.base2-1 {
  display: flex;
  justify-content: space-between;
  height: 48rpx;
}

.base2-1-1 {
  display: flex;
}

.base2-1-1-name {
  font-size: 36rpx;
  font-weight: 700;
}

.base2-1-1-renjun {
  background-color: tomato;
  border-radius: 10rpx;
  font-size: 26rpx;
  margin-left: 30rpx;
}

.base2-1-2 {
  display: flex;
  align-items: center;
}

.base2-2 {
  font-size: 28rpx;
  color: #8a8a8a;
  height: 38rpx;
}

.base2-3 {
  color: #8a8a8a;
  display: flex;
  justify-content: space-between;
  height: 42rpx;
  white-space: nowrap;
}

.base2-4 {
  color: #8a8a8a;
  height: 42rpx;
}

.base2-5 {
  display: flex;
  justify-content: space-between;
  height: 46rpx;
}

.base2-5-item1 {
  display: flex;
}

.base2-5-biaoqian {
  padding: 0 10rpx;
  border-radius: 10rpx;
  margin-right: 10rpx;
  background-color: #f2cd20;
}



